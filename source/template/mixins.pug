mixin flat-card(flat)
    -var status = ""
    case flat.status
        when "свободно"
            - status= "free"
        when "забронировано"
            - status = "booked"
        when "продано"
            - status = "sold"
        default
            - status = "free"
    .flat
        a(.flat-card.flat-card--${status})
            .flat-card__header
                if flat.sale
                    span.flat-card__label.flat-card__sale= flat.sale
                if flat.shokPrice
                    span.flat-card__label.flat-card__shock-price шок цена
            .flat-card__main
                .flat-card__title= flat.title
                .flat-card__feature
                    .flat-card__decoration= flat.decoration
                    .flat-card__square #{flat.square} м<sup>2<sup> площадь
                    .flat-card__floor #{flat.floor} этаж
                .flat-card__price= flat.price
            .flat-card__footer
                .flat-card__status(.flat-card__status--${status})= flat.status
        button.button-favorite
            img.button-favorite--arrow(src="./images/star.svg", alt="star")
